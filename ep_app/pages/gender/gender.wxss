/* pages/gender/gender.wxss */

.question {
  width: 75%;
  color: whitesmoke;
  font-size: 15pt;
  align-items: center;
  text-align: center;
  margin-bottom: 50px;
}

.maleView{
  float: left;
  margin-right: 20px;
  text-align: center;
  color: whitesmoke;
}

.maleBtn {
  font-size: 30pt;
  width: 100px;
  height: 100px;
  border-radius: 25px;
  box-shadow:0 6rpx 10rpx 2rpx #ffffffc4;/*for Android*/
  -webkit-box-shadow:0px 3px 5px 1px #ffffffc4;/*for IOS*/
  background: white;
  color:cornflowerblue;
  margin-bottom: 10px;
}
.maleBtn::after{  
  border: 5px solid white;
}

.femaleView{
  float: right;
  margin-left: 20px;
  text-align: center;
  color: whitesmoke;
}

.femaleBtn {
  font-size: 30pt;
  width: 100px;
  height: 100px;
  border-radius: 25px;
  box-shadow: 0 6rpx 10rpx 2rpx #ffffffc4;/*for Android*/
  -webkit-box-shadow: 0px 3px 5px 1px #ffffffc4;/*for IOS*/
  background: white;
  color: coral;
  margin-bottom: 10px;
}
.femaleBtn::after{  
  border: 5px solid white;
}

.chooseGender {
  margin-top: 50px;
  margin-bottom: 100px;
}

.clickMeView {
  margin-top: 100px;
}

.clickMe {
  text-align: center;
  justify-content: center;
  font-size: 15pt;
  color: rgb(248, 110, 133);
  width: 240px;
  background: white;
}

.container {
  position: fixed;
  width: 100%;
  height:100%;
  background-size: cover;
  background-color: rgb(241, 136, 154);
  display: flex;
  align-items: center;
  justify-content: center;
}