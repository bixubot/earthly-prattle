.chatView {
  position: relative;
  top:120rpx;
  width: 750rpx;
  height: 100vh;
  text-align: center;
  background-size: cover;
  background-color: rgb(241, 136, 154);
}

.speech-bubble-left {   
  position: relative;   
  background-color: #ffffff;
  padding:10px;   
    
  width: auto;
  height: auto;
  margin-right:auto;
  margin-left:15px;
  margin-top:2px;

  color: rgb(0, 0, 0);   
  text-align: center;   
  border-radius: 10px;   
    
  font-family: sans-serif; 
  display: table;   
}

.speech-bubble-right {   
  position: relative;   
  background-color: #91ED61;
  padding:10px;
  margin-left:auto;
  margin-right:15px;
  margin-top:2px;
    
  width: auto;   
  height: auto;
    
  color: rgb(0, 0, 0);   
  text-align: center;   
  border-radius: 10px;   
    
  font-family: sans-serif; 
  display: table; 
}

.speech-bubble-left:after {   
  background-color: #ffffff; 

  content: '';
  position: absolute;
    
  width: 0; 
  height: 0;   
    
  border: 15px solid;
  top: 50%;   
  right: 100%;   
  margin-top: -15px;
  border-color: rgb(241, 136, 154) #ffffff rgb(241, 136, 154) rgb(241, 136, 154);      
}

.speech-bubble-right:after {   
  background-color: #ffffff;
  content: '';   
  position: absolute;
    
  width: 0;   
  height: 0;   
    
  border: 15px solid;

  left: 100%;   
  top: 50%;   
  margin-top: -15px;
  border-color: rgb(241, 136, 154) rgb(241, 136, 154) rgb(241, 136, 154) #91ED61;       
}

.speech-bubble p {   
  display: table-cell;   
  vertical-align: middle;
  margin: 10px; 
}

.messageBlock{
  position:relative;
}