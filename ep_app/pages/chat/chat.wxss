.back {
  border: 0 solid #ffffff;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #cccccc;
  font-size: 14pt;
  width: 50rpx;
  height: 50rpx;
  opacity:0;
  background: transparent;
  top:0px;
  position: absolute
}

.image {
  width: 40rpx;
  height: 40rpx;
}

.backButtonView {
  top: 33px;
  left: 35px;
  width: 50rpx;
  height: 50rpx;
  position:absolute;
}

.headerView{
  margin-left: 0;
  margin-right: 0;
  position:fixed; 
  top:0;
  width: 750rpx;
  height:120rpx;
  color:#000000;
  text-align: center;
  background-size: cover;
  background-color: rgba(0, 0, 0, 0.027);
}

.name{
  top: 33px;
  position: relative
}

.chatView {
  position: fixed;
  top:120rpx;
  width: 100%;
  height:100%;
  text-align: center;
  background-size: cover;
  background-color: rgb(241, 136, 154);
}

.speech-bubble-left {   
  position: relative;   
  background-color: #ffffff;
  padding:10px;   
    
  width: auto;   
  height: auto;
  margin-right:auto; 
  margin-left:15px; 

  color: rgb(0, 0, 0);   
  text-align: center;   
  border-radius: 10px;   
    
  font-family: sans-serif; 
  display: table;   
}

.speech-bubble-right {   
  position: relative;   
  background-color: #91ED61;
  padding:10px;
  margin-left:auto; 
  margin-right:15px; 
    
  width: auto;   
  height: auto;
    
  color: rgb(0, 0, 0);   
  text-align: center;   
  border-radius: 10px;   
    
  font-family: sans-serif; 
  display: table; 
}

.speech-bubble-left:after {   
  background-color: #ffffff; 

  content: '';   
  position: absolute;
    
  width: 0;   
  height: 0;   
    
  border: 15px solid;
  top: 50%;   
  right: 100%;   
  margin-top: -15px;
  border-color: rgb(241, 136, 154) #ffffff rgb(241, 136, 154) rgb(241, 136, 154);      
}

.speech-bubble-right:after {   
  background-color: #ffffff;
  content: '';   
  position: absolute;
    
  width: 0;   
  height: 0;   
    
  border: 15px solid;    
  
  left: 100%;   
  top: 50%;   
  margin-top: -15px;
  border-color: rgb(241, 136, 154) rgb(241, 136, 154) rgb(241, 136, 154) #91ED61;       
}

.speech-bubble p {   
  display: table-cell;   
  vertical-align: middle;
  margin: 10px; 
}

.messageBlock{
  position:relative;
}