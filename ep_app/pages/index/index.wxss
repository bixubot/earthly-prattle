/**index.wxss**/
.getProfileBtn {
  margin-top: 50pt;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 192rpx;
  height: 192rpx;
  margin: 20rpx;
  border-radius: 50%;
  border-width: 20rpx;
  border-color: #fff;
}

.userinfo-nickname {
  color: #fff;
}

.maleBtn {
  font-size: 30pt;
  width: 100px;
  height: 100px;
  border-radius: 25px;
  box-shadow: 4px 1px 1px #cccccc;
  background: white;
  color:cornflowerblue;
  float:left;
  margin-right: 20px;
}
.maleBtn::after{  
  border:5px solid white;  
}  

.femaleBtn {
  font-size: 30pt;
  width: 100px;
  height: 100px;
  border-radius: 25px;
  box-shadow: 4px 1px 1px #cccccc;
  background: white;
  color: coral;
  float:right;
  margin-left: 20px;
}
.femaleBtn::after{  
  border:5px solid white;  
}  

.chooseGender {
  margin-top: 200rpx;
  margin-bottom: 0rpx;
}

.enterChat {
  bottom: 0;
}

.clickMe {
  text-align: center;
  font-size: 14pt;
  color: white;
  width: 90%;
  height: 90rpx;
  margin-bottom: 20px;
  background: transparent;
}
.clickMe::after{  
  border:5px solid white;  
}  

.usermotto {
  color: #fff;
  font-size: 11pt;
}

.container {
  position: fixed;
  width: 100%;
  background-size: cover;
  background-color: rgb(241, 136, 154);
}